@model IPM_Project.Models.Entities.Feed

<link rel="stylesheet" href="~/Style/Homepage.css">

<div class="container-fluid" id="hotLinks">
    <div class="modal-body row" style="display: flex; min-height:300px">
        <div class="col-md-6" style="background-image: url('images/Dogs_Adopt_Background.jpeg');
                                     background-size: cover;
                                     background-repeat: no-repeat;
                                     background-position: 58.33325% center;
                                     display: block;
                                     border-radius: 2%">
            
            <div id="HomePageButton" style="float: right; margin-top: 190px">
                <a href=@Url.Action("SearchDogs", "Data") role="button"
                   class="btn btn-default btn-lg">
                    Adopt Us &raquo;
                </a>
            </div>
        </div>
        <div class="col-md-6" style="background-image: url('images/People_HelpUs_Background.jpeg');
                                     background-size: cover;
                                     background-repeat: no-repeat;
                                     background-position: 58.33325% center;
                                     display: block;
                                     border-radius: 2%">
            <div id="HomePageButton" style="float: right; margin-top: 190px">
                <a href=@Url.Action("HelpUs", "Home") role="button"
                    class="btn btn-default btn-lg">
                    Help Us &raquo;
                </a>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="container-fluid" id="feedNews">
    @if (Model != null && Model.feedNews.Count() > 0)
    {
        foreach (IPM_Project.Models.Entities.News row in Model.feedNews)
        {
            <div class="modal-body row" style="display: flex;">
                <div class="col-md-6" style="background-image: url('@row.figure');
                                    background-size: cover;
                                    background-repeat: no-repeat">
                    <br />
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <p class="h1">@row.title</p>
                    </div>
                    <div class="text-left">
                        <p>@row.news</p>
                    </div>
                    <br />
                    <div class="text-right">
                        <small>@row.publishTime</small>
                    </div>
                    <br />
                    <hr />
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            Sorry, for the moment there is no news...
        </div>
    }
</div>

